<h2>Card list</h2>
<table>
  <% @cards.each do |c| %>
    <tr class="card">
      <td><%= c[:name] %></td>
      <td><%= c[:cost] %></td>
      <!-- power and toughness -->
      <td><%= (c[:atk].nil? or c[:hp].nil?) ? "" : c[:atk].to_s + "/" + c[:hp].to_s %></td>
      <!-- terrain mods -->
      <td><% @terrain_mods.each_with_index do |e, i| %><%= unless c[e].nil? then e + " " + c[e].to_s end %><% end %></td>
    </tr>
    <tr class="hidden">
      <td colspan=4><%= c.type[:name].capitalize + (c[:race].empty? ? "" : " | " + c[:race]) + (c[:profession].empty? ? "" : " - " + c[:profession]) %></td>
    </tr>
    <tr class="hidden">
      <td colspan=4><%= c[:ability] %></td>
    </tr>
    <!-- edit/delete buttons -->
    <% if session[:card] %>
      <tr class="hidden">
        <td><button class="edit_button" value="<%= c[:id] %>">Edit</button><button class="delete_button" value="<%= c[:id] %>">Delete</button></td>
      </tr>
    <% end %>
  <% end %>
</table>
